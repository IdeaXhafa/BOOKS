
@{
    ViewData["Title"] = "Create";
}

<h1 style="color:white;">Create</h1>


<div class="modal-dialog">
    <div class="modal-content">
        <form class="form" asp-action="Create" method="post">
            <div class="modal-header">
                <h4 class="modal-title">Shto Magazine</h4>
                <button type="button" class="close" data-dismiss="modal" aria-hidden="true" onclick="window.location='/magazines';">&times;</button>
            </div>
            <div class="modal-body">
                <div class="form-group">
                    <label>name:</label>
                    <input name="name" id="name" type="text" class="form-control" value="" required>
                </div>
                <div class="form-group">
                    <label>company</label>
                    <input name="company" id="company" type="text" class="form-control" value="" required>
                </div>
                <div class="form-group">
                    <label>description</label>
                    <input name="description" id="description" type="text" class="form-control" value="" required>
                </div>
            </div>
            <div class="modal-footer">
                <input type="button" class="btn btn-dark" value="Anulo" onclick="window.location='/magazines';">
                <input type="submit" value="Create" class="btn btn-primary float-right">
            </div>
        </form>
    </div>
</div>