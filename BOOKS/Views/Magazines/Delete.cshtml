@model BOOKS.Models.Magazines
@{
    ViewData["Title"] = "Delete";
}

<div class="modal-dialog">
    <div class="modal-content">
        <form class="form" asp-action="Delete" method="post">
            <div class="modal-header">
                <h4 class="modal-title">Are you sure you want to delete this?</h4>
                <button type="button" class="close" data-dismiss="modal" aria-hidden="true" onclick="window.location='/magazines';">&times;</button>
            </div>
            <div class="modal-body">
                <div class="form-group">
                    <label>name:</label>
                    <h5 class="form-control">@Html.DisplayFor(model => model.name)</h5>
                </div>
                <div class="form-group">
                    <label>company:</label>
                    <h5 class="form-control">@Html.DisplayFor(model => model.company)</h5>
                </div>
                <div class="form-group">
                    <label>description:</label>
                    <h5 class="form-control">@Html.DisplayFor(model => model.description)</h5>
                </div>

            </div>
            <div class="modal-footer">
                <input type="button" class="btn btn-dark" value="Anulo" onclick="window.location='/magazines';">
                <input type="submit" value="Delete" class="btn btn-danger" float-right">
            </div>
        </form>
    </div>
</div>
