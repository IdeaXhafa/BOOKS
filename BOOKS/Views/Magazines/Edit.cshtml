@model Magazines
@{
    ViewData["Title"] = "Edit";
}

<h2 style="color:white;">Edit</h2>

<div class="modal-dialog">
    <div class="modal-content">
        <form class="form" asp-action="Edit" method="post">
            <div class="modal-header">
                <h4 class="modal-title">Edito Magazine</h4>
                <button type="button" class="close" data-dismiss="modal" aria-hidden="true" onclick="window.location='/magazines';">&times;</button>
            </div>
            <div class="modal-body">
                <div class="form-group">
                    <label>name:</label>
                    <input type="text" class="form-control" asp-for="name" />
                    <span asp-validation-for="name"></span>
                </div>
                <div class="form-group">
                    <label>company:</label>
                    <input type="text" class="form-control" asp-for="company" />
                </div>
                <div class="form-group">
                    <label>description:</label>
                    <input type="text" class="form-control" asp-for="description" />
                </div>
            </div>

            <div class="modal-footer">
                <input type="button" class="btn btn-dark" value="Anulo" onclick="window.location='/magazines';">
                <input type="submit" value="Edito" class="btn btn-primary float-right">
            </div>
        </form>
    </div>
</div>
